-- REPORT 1 Code to create report that breaks down retiring titles by department
SELECT e.emp_no,
e.first_name,
e.last_name,
t.title,
t.from_date,
t.to_date,
de.dept_no
INTO retirement_depts
FROM employees AS e
INNER JOIN titles AS t
ON (e.emp_no = t.emp_no)
INNER JOIN dept_emp AS de
ON (e.emp_no = de.emp_no)
WHERE (e.birth_date BETWEEN '1952-01-01' AND '1955-12-31')
ORDER BY emp_no ASC;

SELECT * FROM retirement_depts

-- Use Dictinct with Orderby to remove duplicate rows
SELECT DISTINCT ON (rt.emp_no) rt.emp_no,
rt.first_name,
rt.last_name,
rt.dept_no,
rt.title

INTO unique_rt_depts
FROM retirement_depts as rt
WHERE rt.to_date = '9999-01-01'
ORDER BY emp_no, to_date DESC;

SELECT * FROM unique_rt_depts

--count and group by title and department
SELECT COUNT(ur.emp_no), ur.title, ur.dept_no
INTO retiring_depts
FROM unique_rt_depts as ur
GROUP BY title, dept_no
ORDER BY dept_no DESC;

SELECT * FROM retiring_depts

--REPORT 2 code to identify employees born after 1966 by title

SELECT e.emp_no,
e.first_name,
e.last_name,
t.title,
t.from_date,
t.to_date
INTO not_retirement_titles
FROM employees AS e
INNER JOIN titles AS t
ON (e.emp_no = t.emp_no)
WHERE (e.birth_date BETWEEN '1966-01-01' AND '2022-02-02')
ORDER BY emp_no ASC;

SELECT * FROM not_retirement_titles

-- Use Dictinct with Orderby to remove duplicate rows
SELECT DISTINCT ON (rt.emp_no) rt.emp_no,
rt.first_name,
rt.last_name,
rt.title

INTO unique_not_retiring_titles
FROM retirement_titles as rt
WHERE rt.to_date = '9999-01-01'
ORDER BY emp_no, to_date DESC;

SELECT * FROM unique_not_retiring_titles

